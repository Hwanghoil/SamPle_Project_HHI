<UserControl x:Class="BaseballSample_HHI.Controls.SamllCardHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BaseballSample_HHI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Height="40">
        <Border Style="{StaticResource Title2}" BorderThickness="0,0,1,1" BorderBrush="#E0E0E0" Background="#F7F7F9">
            <TextBlock Text="{Binding HdTitle}" Style="{StaticResource Title}"/>
        </Border>
    </Grid>
</UserControl>
