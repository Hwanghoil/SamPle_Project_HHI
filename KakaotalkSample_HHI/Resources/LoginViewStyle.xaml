    </Style>

    <Style TargetType="TextBlock" x:Key="Tips">

        <Setter Property="Background" Value="White"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="Logo_Img">
